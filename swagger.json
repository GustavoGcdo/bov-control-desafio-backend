{
  "openapi": "3.0.0",
  "info": {
    "title": "API Fazenda",
    "version": "1.0.0",
    "description": "API para gerenciamento de fazendas e produção de leite"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Servidor local"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Rota padrão da API",
        "tags": ["Informação da api"],
        "x-order": 1,
        "security": [],
        "responses": {
          "200": {
            "description": "Informações da API",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "version": {
                      "type": "string",
                      "example": "1.0.0"
                    },
                    "name": {
                      "type": "string",
                      "example": "bov-control-api"
                    },
                    "documentation": {
                      "type": "string",
                      "example": "/docs"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "Autenticação"
        ],
        "summary": "Autenticação de usuário",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": [
                  "username",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Autenticação realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "executed with success"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "token": {
                          "type": "string"
                        }
                      }
                    },
                    "errors": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação dos dados de entrada"
          },
          "403": {
            "description": "Credenciais inválidas"
          }
        }
      }
    },
    "/farms": {
      "post": {
        "tags": [
          "Fazendas"
        ],
        "summary": "Cadastra uma nova fazenda e fazendeiros(as)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "minLength": 3
                  },
                  "code": {
                    "type": "string",
                    "minLength": 3
                  },
                  "distanceFromFactory": {
                    "type": "number",
                    "minimum": 0,
                    "exclusiveMinimum": true
                  },
                  "farmers": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string",
                          "minLength": 1
                        },
                        "phone": {
                          "type": "string",
                          "minLength": 1
                        }
                      },
                      "required": [
                        "name",
                        "phone"
                      ]
                    },
                    "minItems": 1
                  }
                },
                "required": [
                  "name",
                  "code",
                  "distanceFromFactory",
                  "farmers"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Fazenda criada com sucesso"
          },
          "400": {
            "description": "Erro de validação de dados"
          },
          "409": {
            "description": "Fazenda com o mesmo código já existe"
          },
          "404": {
            "description": "Fazenda não encontrada"
          }
        }
      }
    },
    "/farms/{id}/milk-production": {
      "post": {
        "tags": [
          "Produção de Leite"
        ],
        "summary": "Registra a produção diária de leite de uma fazenda",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID da fazenda"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "milkQuantity": {
                    "type": "number"
                  },
                  "productionDate": {
                    "type": "string",
                    "format": "date"
                  }
                },
                "required": [
                  "milkQuantity",
                  "productionDate"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Produção registrada com sucesso"
          },
          "400": {
            "description": "Erro de validação de dados"
          },
          "404": {
            "description": "Fazenda não encontrada"
          }
        }
      }
    },
    "/farms/{id}/milk-production/summary": {
      "get": {
        "tags": [
          "Produção de Leite"
        ],
        "summary": "Consulta o volume de leite diário e a média mensal de uma fazenda",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID da fazenda"
          },
          {
            "name": "month",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 12
            }
          },
          {
            "name": "year",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "pattern": "^\\d{4}$"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Resumo ddirário e média mensal de leite",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "executed with success"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "summaryOfDays": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "day": {
                                "type": "string",
                                "format": "date"
                              },
                              "dailyTotal": {
                                "type": "number"
                              }
                            }
                          }
                        },
                        "monthlyAverage": {
                          "type": "number"
                        }
                      }
                    },
                    "errors": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação de parametros"
          },
          "404": {
            "description": "Fazenda não encontrada"
          }
        }
      }
    },
    "/farms/{id}/milk-price": {
      "get": {
        "tags": [
          "Preço do Leite"
        ],
        "summary": "Consulta o preço do litro de leite para um mês especifico",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "month",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 12
            }
          },
          {
            "name": "year",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "pattern": "^\\d{4}$"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Preço do litro de leite em BRL e USD",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "executed with success"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "price": {
                          "type": "object",
                          "properties": {
                            "BRL": {
                              "type": "string",
                              "example": "R$ 13.395,00"
                            },
                            "USD": {
                              "type": "string",
                              "example": "$2,321.22"
                            }
                          }
                        }
                      }
                    },
                    "errors": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação de parâmetros"
          },
          "404": {
            "description": "Fazenda não encontrada"
          }
        }
      }
    },
    "/farms/{id}/milk-price/yearly": {
      "get": {
        "tags": [
          "Preço do Leite"
        ],
        "summary": "Consulta o preço do litro de leite para cada mês de um ano",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "year",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "pattern": "^\\d{4}$"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Preço do litro de leite mensal em BRL e USD"
          },
          "400": {
            "description": "Erro de validação de parâmetros"
          },
          "404": {
            "description": "Fazenda não encontrada"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Informação da api",
      "description": "Informações gerais da api"
    },
    {
      "name": "Autenticação",
      "description": "Operações de login e autenticação de usuário"
    },
    {
      "name": "Fazendas",
      "description": "Gerenciamento de fazendas"
    },
    {
      "name": "Produção de Leite",
      "description": "Registro e consulta de produção de leite"
    },
    {
      "name": "Preço do Leite",
      "description": "Consulta do preço do leite"
    }
  ]
}